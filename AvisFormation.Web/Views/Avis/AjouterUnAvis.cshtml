@using AvisFormation.Web.ViewModels
@model AvisCreateViewModel

@{
    ViewData["Title"] = "Ajouter un avis";
}

<div class="container mt-4">

    <h2 class="fw-bold mb-4">Ajouter un avis</h2>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="FormationId" />

     

        <div class="mb-3">
            <label class="form-label">Note *</label>
            <select asp-for="Note" class="form-control">
                <option value="">-- Note --</option>
                <option value="1">1 ⭐</option>
                <option value="2">2 ⭐⭐</option>
                <option value="3">3 ⭐⭐⭐</option>
                <option value="4">4 ⭐⭐⭐⭐</option>
                <option value="5">5 ⭐⭐⭐⭐⭐</option>
            </select>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Commentaire *</label>
            <textarea asp-for="Commentaire" rows="4" class="form-control"></textarea>
            <span asp-validation-for="Commentaire" class="text-danger"></span>
        </div>

        <button class="btn btn-primary">Publier</button>
        <a href="/Formation/Details/@Model.FormationId" class="btn btn-secondary">Annuler</a>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}